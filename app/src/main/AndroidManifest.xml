<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.hsr.mge.gadgeothek">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoActionBar"></activity>
        <activity android:name=".LogoutActivity"></activity>
        <activity android:name=".RegistrationActivity"></activity>
        <activity android:name=".MenuActivity"></activity>
        <activity android:name=".GadgetActivity"></activity>
        <activity android:name=".LoanActivity"></activity>
        <activity android:name=".ReservationActivity"></activity>
        <activity android:name=".LibrarySwitchActivity"></activity>
    </application>

</manifest>